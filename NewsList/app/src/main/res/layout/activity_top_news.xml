<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TopNewsActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/top_news_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="163dp" />

    <ProgressBar
        android:id="@+id/topNewsProgress"
        style="?android:attr/progressBarStyle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/top_news_recycler_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/top_news_recycler_view"
        app:layout_constraintTop_toTopOf="@+id/top_news_recycler_view" />
</androidx.constraintlayout.widget.ConstraintLayout>